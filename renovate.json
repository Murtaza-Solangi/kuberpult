{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "schedule:earlyMondays"
  ],
  "packageRules": [
    {
      "description": "Separate Major and Minor versions' PRs for packages in go.mod",
      "matchPaths": [
        "go.mod"
      ],
      "separateMajorMinor": "false"
    }
  ],
  "prHourlyLimit": 0,
  "labels": ["renovate"]
}
