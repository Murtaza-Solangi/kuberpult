{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "description": "Separate Major and Minor versions' PRs for packages in go.mod",
      "matchPaths": [
        "go.mod"
      ],
      "separateMajorMinor": "true"
    }
  ],
  "prHourlyLimit": 0,
  "labels": ["renovate"],
  "schedule": [
    "before 12pm on Monday",
    "before 12pm on Thursday"
  ]
}
