{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "schedule:earlyMondays"
  ],
  "packageRules": [],
  "regexManagers": [
    {
      "fileMatch": [".*Dockerfile$"],
      "matchStrings": [
        "datasource=(?<datasource>.*?) depName=(?<depName>.*)( versioning=(?<versioning>.*?))?\\sENV .*?_VERSION=(?<currentValue>.*)"
      ]
    }
  ],
  "prHourlyLimit": 0,
  "labels": ["renovate"]
}
